mixin createProject(project={})
    form.agregar-proyecto(action=`/new-project/${project.id || ''}` method="POST")
        .campo
            label(for="name") Project name:
            input(value=project.name type="text" id="name" name="name" placeholder="Enter project name")
        .campo.enviar
            input(type="submit" value=`${project.name ? 'save' : 'add'}`).boton